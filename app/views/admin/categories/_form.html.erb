<!-- Form Card -->
<div class="form-card">
    <%= form_with model: [:admin, @category], id:"categoryForm", local: true do |f| %>
      <div class="mb-4">
        <% if @category.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(@category.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
              <% @category.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class:"form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :slug, class: "form-label" %>
        <%= f.text_field :slug, class:"form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class:"form-control" %>
      </div>

      <div class="mb-4">
        <div class="d-flex align-items-center">
          <%= f.check_box :active, class: "form-check-input" %>
          <%= f.label :active, class: "form-check-label" %>
        </div>
      </div>

      <div class="button-group">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Back", admin_categories_path, class: "btn btn-secondary" %>
      </div>

    <% end %>
</div>