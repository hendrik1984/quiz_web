<!-- Main Content -->
<div class="main-content">
  <!-- SIDEBAR -->
  <%= render "admin/layouts/sidebar" %>

  <div id="categoriesView" class="view-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">Quiz Categories</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Categories</li>
                </ol>
            </nav>
        </div>
        
        <%= link_to new_admin_category_path, 
          class: "btn btn-primary", data: { toggle: "modal", target: "#category-modal" } do %>
          <i class="bi bi-plus-lg me-2"></i>Add Category
        <% end %>        
    </div>
    
    <div class="card">
        <div class="card-body">
          <% if @categories.present? %>
            <div class="table-responsive">
              <table class="table table-hover">
                  <thead>
                      <tr>
                          <th>Name</th>
                          <th>Slug</th>
                          <th>Status</th>
                          <th>Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                    <% @categories.each do |category| %>
                      <tr>
                          <td><strong><%= category.name %></strong></td>
                          <td><%= category.slug %></td>
                          <td>
                            <span class="badge <%= category.active? ? 'bg-success': 'bg-warning' %>">
                              <%= category.active? ? "Active": "Inactive" %>
                            </span>
                          </td>
                          <td>
                              <%= link_to edit_admin_category_path(category), class: "btn btn-sm btn-outline-primary btn-icon me-1" do %>
                                <i class="bi bi-pencil"></i>
                              <% end %>
                              
                              <%= link_to admin_category_path(category), class: "btn btn-sm btn-outline-danger btn-icon", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                                <i class="bi bi-trash"></i>
                              <% end %>
                          </td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
            </div>
          <% else %>
            <div>No Category</div>
          <% end %>
        </div>
    </div>
</div>
</main>