<!-- Filter Section -->
<div class="container mb-4">
    <div class="row g-3">
        <div class="col-12">
            <div class="filter-wrapper">
                <div class="d-flex gap-2">
                    <div class="flex-grow-1">
                        <div class="input-group search-input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" class="form-control border-start-0 ps-0" id="searchInput" placeholder="Search quiz categories..." onkeyup="filterCategories()">
                        </div>
                    </div>
                    <button class="btn btn-filter-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#advancedFilters" aria-expanded="false" aria-controls="advancedFilters">
                        <i class="bi bi-funnel-fill me-2"></i>
                        Filters
                        <i class="bi bi-chevron-down ms-2 filter-chevron"></i>
                    </button>
                </div>
                
                <!-- Advanced Filters Collapse -->
                <div class="collapse mt-3" id="advancedFilters">
                    <div class="advanced-filters-content">
                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <label class="form-label fw-semibold text-white">
                                    <i class="bi bi-bar-chart-fill me-2"></i>Difficulty Level
                                </label>
                                <select class="form-select" id="difficultyFilter" onchange="filterCategories()">
                                    <option value="all">All Difficulty Levels</option>
                                    <option value="easy">Easy</option>
                                    <option value="medium">Medium</option>
                                    <option value="hard">Hard</option>
                                    <option value="mix">Mix</option>
                                </select>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label fw-semibold text-white">
                                    <i class="bi bi-tags-fill me-2"></i>Category Tags
                                </label>
                                <div class="d-flex gap-2 flex-wrap">
                                    <button class="btn btn-sm btn-filter active" data-filter="all" onclick="filterByTag('all')">
                                        All <span class="badge bg-white text-primary ms-1">12</span>
                                    </button>
                                    <button class="btn btn-sm btn-filter" data-filter="knowledge" onclick="filterByTag('knowledge')">
                                        Knowledge
                                    </button>
                                    <button class="btn btn-sm btn-filter" data-filter="entertainment" onclick="filterByTag('entertainment')">
                                        Fun
                                    </button>
                                    <button class="btn btn-sm btn-filter" data-filter="academic" onclick="filterByTag('academic')">
                                        Academic
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <button class="btn btn-clear-filters" onclick="clearAllFilters()">
                                    <i class="bi bi-arrow-counterclockwise me-2"></i>Clear All Filters
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

